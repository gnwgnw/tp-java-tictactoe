<fest:template xmlns:fest="http://fest.mail.ru">

    <div class="b-user-form">
        <form method="POST" id="login-form">
            <label>Login:</label>
            <input class="b-user-form__input" name="login" required=""/>
            <label>Password:</label>
            <input class="b-user-form__input" name="password" type="password" required=""/>
        </form>
    </div>

    <div class="b-submit-button">
        <button class="b-submit-button__button" type="submit" form="login-form">LogIn</button>
        <a href='#'><button class="b-submit-button__button">Back</button></a>
    </div>

</fest:template>
