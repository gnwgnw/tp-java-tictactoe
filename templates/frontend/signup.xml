<fest:template xmlns:fest="http://fest.mail.ru">

    <div class="b-back">
        <a href='#' class="b-back__button">Back</a>
    </div>

    <div class="b-user-form">
        <form method="POST" id="signup-form">
            <label>Login:</label>
            <input class="b-user-form__input" name="login" required=""/>
            <label>Email:</label>
            <input class="b-user-form__input" name="email" type="email" required=""/>
            <label>Password:</label>
            <input class="b-user-form__input" name="password" type="password" required=""/>
        </form>

        <input class="b-user-form__button" type="submit" value="SignUp" form="signup-form"/>
    </div>

</fest:template>
