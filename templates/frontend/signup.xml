<fest:template xmlns:fest="http://fest.mail.ru">

    <h1>SignUp</h1>

    <a href='#'><button class="button__back_button">Back</button></a>

    <form method="POST" action="/signup">
        <div>
            <label>
                Login:<br/>
                <input name="login"/>
            </label>
        </div>
        <div>
            <label>
                Email:<br/>
                <input name="email" type="email"/>
            </label>
        </div>
        <div>
            <label>
                Password:<br/>
                <input name="password" type="password"/>
            </label>
        </div>

        <div style="margin:20px">
            <button type="submit" class="button__submit_button">SignUp</button>
        </div>
    </form>

</fest:template>
