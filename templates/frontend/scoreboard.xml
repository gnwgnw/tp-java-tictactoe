<fest:template xmlns:fest="http://fest.mail.ru" context_name='collection'>

    <div class="b-scoreboard">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody>
                <fest:each iterate='collection' index='i' value='score'>
                    <tr>
                        <td><fest:value>score.login</fest:value></td>
                        <td><fest:value>score.gameCount</fest:value></td>
                    </tr>
                </fest:each>
            </tbody>
        </table>
    </div>

    <div class="b-submit-button">
        <a href='#'><button class="b-submit-button__button">Back</button></a>
    </div>

</fest:template>
