<fest:template xmlns:fest="http://fest.mail.ru" context_name='status'>

    <fest:choose>
        <!--<fest:when test="!status.isFinished">-->
            <!--Let's [<fest:value>status.whoseTurn</fest:value>]-->
        <!--</fest:when>-->

        <fest:when test="!status.isFinished">
            Let's [<fest:value>status.whoseTurn</fest:value>] !
        </fest:when>

        <!--TODO-->
        <fest:when test="status.isFinished">

            <div class="b-back">
                <a href='#' class="b-back__button">Back</a>
            </div>

            <fest:choose>
                <fest:when test="status.winner == 'none'">
                    <div>Nobody win :(</div>
                </fest:when>

                <fest:when test="status.winner != 'none'">
                    WIN [<fest:value>status.winner</fest:value>] !!!
                </fest:when>
            </fest:choose>

            <!--TODO-->
            <div class="b-battle-new-game-button">New game</div>

        </fest:when>
    </fest:choose>

</fest:template>
