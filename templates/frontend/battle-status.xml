<fest:template xmlns:fest="http://fest.mail.ru" context_name='status'>

    <fest:choose>

        <fest:when test="!status.isFinished">
            <div class="b-battle-status__notification">
                Let's [<fest:value>status.whoseTurn</fest:value>] !
            </div>
        </fest:when>

        <!--TODO-->
        <fest:when test="status.isFinished">

            <!--TODO-->
            <div class="b-battle-status__game-result">

                <fest:choose>
                    <fest:when test="status.winner == 'none'">
                        <div class="b-battle-status__notification">Nobody win :(</div>
                    </fest:when>

                    <fest:when test="status.winner != 'none'">
                        <div>
                            WIN [<fest:value>status.winner</fest:value>] !!!
                        </div>
                    </fest:when>
                </fest:choose>


                <button class="b-battle-status__button">New game</button>
                <a href='#'>
                    <button class="b-battle-status__button">Back</button>
                </a>
            </div>

        </fest:when>
    </fest:choose>

</fest:template>
