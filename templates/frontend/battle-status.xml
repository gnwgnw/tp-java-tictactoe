<fest:template xmlns:fest="http://fest.mail.ru" context_name='status'>
    <div>
        <fest:choose>
            <fest:when test="!status.isFinished">
                <div>Turn</div>
                <div>
                    <img src="/img/{status.whoseTurn}.jpg"/>
                </div>
            </fest:when>

            <fest:when test="status.isFinished">
                <a href='#'>Back</a>

                <fest:choose>
                    <fest:when test="status.whoseTurn == 'none">
                        <div>Nobody win</div>
                    </fest:when>

                    <fest:when test="status.whoseTurn != 'none">
                        <div>Win</div>
                        <div>
                            <img src="/img/{status.whoseTurn}.jpg"/>
                        </div>
                    </fest:when>
                </fest:choose>

                <!--TODO-->
                <div>New game</div>
            </fest:when>
        </fest:choose>
    </div>
</fest:template>
